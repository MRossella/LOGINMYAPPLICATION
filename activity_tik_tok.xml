<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TikTokActivity">

    <TextView
        android:id="@+id/TikTok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"

        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="TIKTOK"
        android:textColor="@color/purple_700"
        android:textSize="54dp" />
    <EditText
        android:id="@+id/emailorusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TikTok"

        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Email or Username"
        android:textColor="@color/purple_200"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"/>
    <EditText
        android:id="@+id/passwordTikTok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailorusername"

        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="@color/purple_200"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordTikTok"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginbtnt"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"/>
</RelativeLayout>
